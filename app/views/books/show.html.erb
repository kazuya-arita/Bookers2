<p id="notice"></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  
  <div class="col-md-3">
   <%= render 'users/user', user: @user %>
  
   <%= render 'book', book: @book %> 
  </div>
  
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>      
   <table class="table">
    <tboby>
      <tr>
       <td>
        <%= link_to user_path(current_user) do %>
         <%= image_tag @book_show.user.get_profile_image(100,100) %><br>
         <%= @user.name %>
        <% end %> 
       </td>
       
       <td>
        <%= link_to book_path(@book_show.id) do %>
         <%= @book_show.title %></td>
        <% end %> 
       <td><%= @book_show.body %></td>
       
       
       <td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-sm btn-success edit_book_path" %></td>
       <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_path" %></td>
       
       
      </tr> 
    </tboby>
   </table>  
  </div>
  
 </div>
</div> 